[user]
    name  = Jimmy BÃ¶rjesson
    email = alcesleo@gmail.com

[github]
    user = alcesleo

[alias]
    a  = add
    aa = add --all
    au = add --update
    b  = branch
    cl = clone
    co = checkout
    d  = diff
    ds = diff --staged
    dt = difftool
    f  = fetch
    h  = browse
    l  = log --oneline --decorate -15
    lo = log --oneline --decorate
    pl = pull
    pr = pull-request
    ps = push
    re = rebase
    ri = rebase --interactive
    s  = status --short

    amend         = commit --amend
    bd            = branch --delete
    bm            = branch -m
    changed-files = show --pretty="format:" --name-only
    changelog     = !git log --oneline `git describe --abbrev=0`..HEAD
    cob           = checkout -b
    com           = checkout master
    conflicts     = !git status --short | grep "^UU" | awk '{ print $2 }'
    ctags         = !.git/hooks/ctags
    dsw           = diff --staged --color-words
    dw            = diff --color-words
    fix           = commit --amend -C HEAD
    forget        = update-index --assume-unchanged
    forgotten     = !git ls-files -v | grep ^[a-z]
    iss           = browse -- issues
    plush         = !git pull --rebase && git push
    pop           = stash pop
    pro           = !git push && hub pull-request -o
    prs           = browse -- pulls
    pulled        = log -p --reverse --no-merges --stat @{1}..
    pure          = pull --rebase
    rec           = rebase --continue
    remember      = update-index --no-assume-unchanged
    sha           = rev-parse --short HEAD
    standup       = log --oneline --decorate --author alcesleo --since yesterday
    stashes       = stash list
    status-files  = !git status --short | awk '{ print $2 }'
    stu           = stash --include-untracked
    supdate       = submodule update --init --recursive
    tfo           = !git reset . && git checkout -- . && git clean -fd
    todo          = grep --line-number -E "(TODO|FIXME).*"
    tree          = log --graph --oneline --decorate --all
    uncommit      = reset --soft HEAD^
    unstage       = reset HEAD
    yolo          = push --force

[core]
    excludesfile = ~/.gitignore

[init]
    templatedir = ~/.git_template

[color]
    diff   = auto
    status = auto
    branch = auto
    ui     = true

[fetch]
    prune = true

[push]
    default = current

[diff]
    tool      = vimdiff
    algorithm = patience

[credential]
    helper = osxkeychain

[filter "trimWhitespace"]
    clean = git-stripspace

[rerere]
    enabled    = true
    autoupdate = true
